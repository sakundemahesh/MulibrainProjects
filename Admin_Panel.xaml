<Page x:Class="Hindalco.Admin_Panel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hindalco"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920" Loaded="Page_Loaded"
      Title="Admin_Panel">

    <Grid Background="White">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" >

            <Button x:Name="Add_Q_Pepar" Content="Add_Q_Pepar"  Style="{StaticResource NumButton}"  FontSize="40" Background="#FF5722" Foreground="White" FontWeight="Bold"
            Width="400" Height="100" Margin="20" Click="Add_Q_Pepar_Click"/>

            <Button x:Name="Add_Video_PDF" Content="Add_Video_PDF"  Style="{StaticResource NumButton}"  FontSize="40" Background="#FFC107" Foreground="Black" FontWeight="Bold"
            Width="400" Height="100" Margin="20" Click="Add_Video_PDF_Click"/>

            <Button x:Name="Back" Content="⬅ Back" FontSize="40"  Style="{StaticResource NumButton}"  Background="#2196F3" Foreground="White" FontWeight="Bold"
            Width="400" Height="100" Margin="20" Click="Back_Click"/>
            <Button x:Name="Report" Content="📊 Report" FontSize="40"  Style="{StaticResource NumButton}"  Background="#2196F3" Foreground="White" FontWeight="Bold"
                Width="400" Height="100" Click="Report_Click"/>


        </StackPanel>
    </Grid>
</Page>
