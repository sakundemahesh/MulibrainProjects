<Page x:Class="Hindalco.Language_Choose"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920" Loaded="Page_Loaded"
      Title="Language_Choose">

    <Grid>

        <!-- Heading -->
        <TextBlock Text="🌍 Select Your Language" FontSize="64" FontWeight="Bold" Foreground="Black"
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0"/>

        <!-- Centered StackPanel for Language Buttons -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" >

            <Button x:Name="MarathiButton" Content=" मराठी (Marathi)"  Style="{StaticResource NumButton}"  FontSize="40" Background="#FF5722" Foreground="White" FontWeight="Bold"
                    Width="400" Height="100" Margin="20" Click="MarathiButton_Click"/>

            <Button x:Name="HindiButton" Content=" हिंदी (Hindi)"  Style="{StaticResource NumButton}"  FontSize="40" Background="#FFC107" Foreground="Black" FontWeight="Bold"
                    Width="400" Height="100" Margin="20" Click="HindiButton_Click"/>

            <Button x:Name="EnglishButton" Content=" English" FontSize="40"  Style="{StaticResource NumButton}"  Background="#2196F3" Foreground="White" FontWeight="Bold"
                    Width="400" Height="100" Margin="20" Click="EnglishButton_Click"/>

           
        </StackPanel>
        <Button x:Name="BtnBack" Style="{StaticResource NumButton}"  Content="⬅ Back" Width="230" Height="60" FontSize="20" Background="Gray" Foreground="White" 
           Click="BtnBack_Click" Margin="10,975,1680,45"/>

    </Grid>
</Page>
